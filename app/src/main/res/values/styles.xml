<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainLayout" parent="Theme.ExpenseBook">
        <item name="android:background">?attr/background</item>
    </style>

    <style name="BaseExpenseBook" parent="Theme.ExpenseBook">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>>
        <item name="android:textColor">?attr/primary_text</item>
    </style>


    <style name="BaseButton" parent="BaseExpenseBook">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>
    <style name="PrimaryButton" parent="BaseButton">
        <item name="android:textColor">?attr/card</item>
        <item name="android:background">@drawable/primary_button_background</item>
    </style>
    <style name="SecondaryButton" parent="BaseButton">
        <item name="android:textColor">?attr/main_gradient_end</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="Container" parent="BaseExpenseBook">
        <item name="android:background">@drawable/container</item>
    </style>


    <style name="EntryDetails.Date.TextView" parent="BaseExpenseBook">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EntryDetails.EntryType.Switch" parent="BaseExpenseBook">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/secondary_text</item>
    </style>
    <style name="EntryDetails.Value.TextView" parent="BaseExpenseBook">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/secondary_text</item>
    </style>
    <style name="EntryDetails.Value.Prefix" parent="BaseExpenseBook">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="EntryDetails.Value.EditText" parent="BaseExpenseBook">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/primary_text</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:background">?attr/card</item>
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="EntyDetails.Description.TextInputLayout" parent="BaseExpenseBook">
        <item name="android:textSize">14sp</item>
        <item name="boxStrokeColor">?attr/secondary_text</item>
        <item name="android:textColorHint">?attr/secondary_text</item>
        <item name="android:background">?attr/card</item>
    </style>
    <style name="EntyDetails.Description.TextInputEditText" parent="EntyDetails.Description.TextInputLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/primary_text</item>
    </style>
    <style name="EntyDetails.DialogButton.Confirm" parent="PrimaryButton">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/primary_button_background</item>
    </style>
    <style name="EntyDetails.DialogButton.Cancel" parent="SecondaryButton">
        <item name="android:textSize">18sp</item>
    </style>
</resources>