<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ExpenseBook">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <style name="BaseButton" parent="ExpenseBook">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="PrimaryButton" parent="BaseButton">
        <item name="android:textColor">@color/card</item>
        <item name="android:background">@drawable/primary_button_background</item>
    </style>
    <style name="SecondaryButton" parent="BaseButton">
        <item name="android:textColor">@color/main_gradient_start</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="Container" parent="ExpenseBook">
        <item name="android:background">@drawable/container</item>
    </style>


    <style name="EntryDetails.Date.TextView" parent="ExpenseBook">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EntryDetails.EntryType.Switch" parent="ExpenseBook">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="EntryDetails.Value.TextView" parent="ExpenseBook">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="EntryDetails.Value.Prefix" parent="ExpenseBook">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="EntyDetails.Description.TextInputLayout" parent="ExpenseBook">
        <item name="android:textSize">14sp</item>
        <item name="boxStrokeColor">@color/secondary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:background">@color/card</item>
    </style>
    <style name="EntyDetails.Description.TextInputEditText" parent="EntyDetails.Description.TextInputLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="placeholderText"></item>
    </style>
    

    <style name="DailyInfo" parent="Theme.ExpenseBook">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="DailyInfo.Expended.Value" parent="DailyInfo">
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="DailyInfo.Remaining.Value" parent="DailyInfo">
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <style name="MonthlyInfo" parent="Theme.ExpenseBook">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="MonthlyInfo.Title" parent="MonthlyInfo">
        <item name="android:fontFamily">@font/baloobhainatwo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="MonthlyInfo.ProgressBar.Expended.Title" parent="MonthlyInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="MonthlyInfo.ProgressBar.Expended.Value" parent="MonthlyInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pink_theme</item>
    </style>
    <style name="MonthlyInfo.ProgressBar.Remaining.Title" parent="MonthlyInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="MonthlyInfo.ProgressBar.Remaining.Value" parent="MonthlyInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_theme</item>
    </style>
    <style name="MonthlyInfo.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/pink_theme</item>
        <item name="android:progressBackgroundTint">@color/blue_theme</item>
        <item name="android:progressBackgroundTintMode">src_over</item>
    </style>
    <style name="MonthlyInfo.Details" parent="MonthlyInfo">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MonthlyInfo.Details.Title" parent="MonthlyInfo.Details">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MonthlyInfo.Details.ManageButton" parent="MonthlyInfo.Details">
        <item name="android:textColor">@color/main_gradient_end</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>
</resources>