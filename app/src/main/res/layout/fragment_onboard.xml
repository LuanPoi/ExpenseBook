<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fadedBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.onboard.OnboardFragment"
    android:background="#bd000000"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:padding="16dp"
        style="@style/Container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textViewInitialValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor inicial"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/editTextInitialValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="@id/textViewInitialValue"
            app:layout_constraintRight_toRightOf="@id/textViewInitialValue"
            app:layout_constraintTop_toBottomOf="@id/textViewInitialValue"/>
        <TextView
            android:id="@+id/textViewSavingsGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Meta de economia"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextInitialValue"/>
        <EditText
            android:id="@+id/editTextSavingsGoal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="@id/textViewSavingsGoal"
            app:layout_constraintRight_toRightOf="@id/textViewSavingsGoal"
            app:layout_constraintTop_toBottomOf="@id/textViewSavingsGoal"/>
        <Button
            android:id="@+id/buttonSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Pular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/buttonSave"
            app:layout_constraintTop_toBottomOf="@id/editTextSavingsGoal"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Salvar"
            android:backgroundTint="@color/green_theme"
            android:textColor="#000"
            app:layout_constraintLeft_toRightOf="@id/buttonSkip"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextSavingsGoal"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>