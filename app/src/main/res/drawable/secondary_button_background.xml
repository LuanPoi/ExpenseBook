<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="2dp"/>
            <gradient
                android:type="linear"
                android:startColor="@color/cyan_600"
                android:endColor="@color/cyan_500"
                android:angle="270"/>
        </shape>
    </item>
    <item
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"
        android:left="1dp">
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="@color/purple_200"/>
        </shape>
    </item>
</layer-list>