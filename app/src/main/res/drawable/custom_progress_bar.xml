<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/customProgressBarBackground">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_900"/>
            <corners android:radius="999dp"/>
            <padding android:left="1dp" android:right="1dp" android:bottom="1dp" android:top="1dp"/>
        </shape>
    </item>

    <!-- Define the background properties like color etc -->
    <item android:id="@+id/customProgressBarTrack">
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_blue"/>
            <corners android:radius="999dp"/>
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc-->
    <item android:id="@+id/customProgressBarProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/custom_pink"/>
                <corners android:radius="999dp"/>
            </shape>
        </clip>
    </item>
</layer-list>