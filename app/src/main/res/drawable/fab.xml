<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33000000">
    <item>
        <layer-list>
            <item android:id="@android:id/background">
                <shape android:shape="oval">
                    <gradient
                        android:angle="90"
                        android:endColor="?attr/main_gradient_start"
                        android:startColor="?attr/main_gradient_end"
                        android:type="linear" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_plus"
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp">
            </item>
        </layer-list>
    </item>
</ripple>